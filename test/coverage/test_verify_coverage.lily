    public define test_coroutine_closure_does_not_leak
    {
        # Set the gc start low so the gc invokes frequently.
        # This relies on the gc firing at the right time.
        var t = backbone.Interpreter.new_with_gc(1)

        # Running this under valgrind will show a leak.
        assert_parse_string(t, """
            import (Coroutine) coroutine

            define fn: Coroutine[Integer, Unit] {
                define fn2(co: Coroutine[Integer, Unit]): Integer { return 0 }

                return Coroutine.build(fn2)
            }

            for i in 0...2: {
                fn()
            }
        """)
    }

    public define test_gc_on_variants_with_gc_values
    {
        # Low gc so it crashes if incorrect.
        var t = backbone.Interpreter.new_with_gc(1)

        assert_parse_string(t, """
            import (Coroutine) coroutine

            define function(coroutine: Coroutine[Unit, Unit]) {
                coroutine.yield(unit)
            }

            class Object {
                private var @coroutine = Some(Coroutine.build(function))

                public define step {
                    with @coroutine as Some(coroutine): {
                        coroutine.resume()
                        if !coroutine.is_waiting(): {
                            @coroutine = None
                        }
                    }
                }
            }

            var objects: List[Object] = [Object(), Object()]
            objects.map(Object.step)
        """)
    }

