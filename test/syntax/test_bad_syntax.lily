    public define test_bad_decl
    {
        var t = Interpreter()

        # bad decl (declare var twice)

        assert_parse_fails(t, """\
            SyntaxError: v has already been declared.

               |
             2 | var v = 10
               |     ^

                from [test]:2:
        """,
        """\
            var v = 10
            var v = 10
        """)

        # bad decl (declare define twice)

        assert_parse_fails(t, """\
            SyntaxError: f has already been declared.

               |
             2 | define f {}
               |        ^

                from [test]:2:
        """,
        """\
            define f {}
            define f {}
        """)

        # bad decl (declare constant twice)

        assert_parse_fails(t, """\
            SyntaxError: c has already been declared.

               |
             2 | constant c = 10
               |          ^

                from [test]:2:
        """,
        """\
            constant c = 10
            constant c = 10
        """)

        # bad decl (generic class with not enough types)

        assert_parse_fails(t, """\
            SyntaxError: Class Container expects 2 type(s), but got 1 type(s).

               |
             2 | var v: Container[Integer] = Container()
               |                         ^

                from [test]:2:
        """,
        """\
            class Container[A, B] {}
            var v: Container[Integer] = Container()
        """)

        # bad decl (generic class with too many types)

        assert_parse_fails(t, """\
            SyntaxError: Class Container expects 1 type(s), but got 3 type(s).

               |
             2 | var v: Container[Integer, Integer, Integer] = Container()
               |                                           ^

                from [test]:2:
        """,
        """\
            class Container[A] {}
            var v: Container[Integer, Integer, Integer] = Container()
        """)
    }

    public define test_bad_literal
    {
        var t = Interpreter()

        # bad literal (Integer too large)

        assert_parse_fails(t, """\
            SyntaxError: Integer value is too large.

               |
             1 | var v = 9223372036854775809
               |         ^

                from [test]:1:
        """,
        """\
            var v = 9223372036854775809
        """)

        # bad literal (Integer too small)

        assert_parse_fails(t, """\
            SyntaxError: Integer value is too small.

               |
             1 | var v = -9223372036854775809
               |         ^

                from [test]:1:
        """,
        """\
            var v = -9223372036854775809
        """)

        # bad literal (Double too large)

        assert_parse_fails(t, """\
            SyntaxError: Double value is out of range.

               |
             1 | var v = 9e999
               |         ^

                from [test]:1:
        """,
        """\
            var v = 9e999
        """)

        # bad literal (Double with Byte suffix)

        assert_parse_fails(t, """\
            SyntaxError: Double value with Byte suffix.

               |
             1 | var v = 1.1t
               |         ^

                from [test]:1:
        """,
        """\
            var v = 1.1t
        """)

        # bad literal (invalid exponent)

        assert_parse_fails(t, """\
            SyntaxError: Expected a base 10 number after exponent.

               |
             1 | var v = 1e?
               |         ^

                from [test]:1:
        """,
        """\
            var v = 1e?
        """)

        # bad literal (exponent too large)

        assert_parse_fails(t, """\
            SyntaxError: Exponent is too large.

               |
             1 | var v = 1e3000
               |         ^

                from [test]:1:
        """,
        """\
            var v = 1e3000
        """)

        # bad literal (Byte with - sign)

        assert_parse_fails(t, """\
            SyntaxError: Byte values cannot have a sign.

               |
             1 | var v = -1t
               |         ^

                from [test]:1:
        """,
        """\
            var v = -1t
        """)

        # bad literal (Byte with + sign)

        assert_parse_fails(t, """\
            SyntaxError: Byte values cannot have a sign.

               |
             1 | var v = +1t
               |         ^

                from [test]:1:
        """,
        """\
            var v = +1t
        """)

        # bad literal (Byte too large)

        assert_parse_fails(t, """\
            SyntaxError: Byte value is too large.

               |
             1 | var v = 256t
               |         ^

                from [test]:1:
        """,
        """\
            var v = 256t
        """)

        # bad literal (Byte quote literal not multi-byte)

        assert_parse_fails(t, """\
            SyntaxError: Multi-character byte literal.

               |
             1 | var v = '12'
               |         ^

                from [test]:1:
        """,
        """\
            var v = '12'
        """)

        # bad literal (Byte quote literal empty)

        assert_parse_fails(t, """\
            SyntaxError: Byte literals cannot be empty.

               |
             1 | var v = ''
               |         ^

                from [test]:1:
        """,
        """\
            var v = ''
        """)

        # bad literal (invalid Byte escape)

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | var v = '\\?'
               |         ^

                from [test]:1:
        """,
        """\
            var v = '\\?'
        """)

        # bad literal (invalid String escape)

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | var v = "\\?"
               |         ^

                from [test]:1:
        """,
        """\
            var v = "\\?"
        """)

        # bad literal (unterminated multi-line String)

        assert_parse_fails(t, """\
            SyntaxError: Unterminated string (started at line 3).
                from [test]:6:
        """,
        """\


            var v = \"\"\"


        """)

        # bad literal (newline in single-line String)

        assert_parse_fails(t, """\
            SyntaxError: Newline in single-line string.

               |
             1 | var v = "
               |         ^

                from [test]:1:
        """,
        """\
            var v = "
        """)

        # bad literal (zero escape on String literal)

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | var v = "\\0"
               |         ^

                from [test]:1:
        """,
        """\
            var v = "\\0"
        """)

        # bad literal (high-bit escape on String literal)

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | var v = "\\128"
               |         ^

                from [test]:1:
        """,
        """\
            var v = "\\128"
        """)

        # bad literal (escape over 255).

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | var v = B"\\256"
               |         ^

                from [test]:1:
        """,
        """\
            var v = B"\\256"
        """)

        # bad literal (invalid hex escape for String).

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | "\\xFF"
               | ^

                from [test]:1:
        """,
        """\
            "\\xFF"
        """)

        # bad literal (short hex escape).

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | "\\x"
               | ^

                from [test]:1:
        """,
        """\
            "\\x"
        """)

        # bad literal (empty hex escape).

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | "\\xF"
               | ^

                from [test]:1:
        """,
        """\
            "\\xF"
        """)

        # bad literal (invalid hex value).

        assert_parse_fails(t, """\
            SyntaxError: Invalid escape sequence.

               |
             1 | "\\xF?"
               | ^

                from [test]:1:
        """,
        """\
            "\\xF?"
        """)

        # bad literal (empty Tuple)

        assert_parse_fails(t, """\
            SyntaxError: Cannot create an empty Tuple.
                from [test]:1:
        """,
        """\
            var v = <[]>
        """)
    }

    public define test_bad_operation
    {
        var t = Interpreter()

        # bad operation (String + String)

        assert_parse_fails(t, """\
            SyntaxError: Invalid operation: String + String.
                from [test]:6:
        """,
        """\
            class Example {
                public var @v = "test"
                public define tryit(other: Example) {
                    var combine =
                        "a" ++ other.v ++ "b" ++
                        "c" + @v ++ "d" ++ other.v ++ "e"
                }
            }

            var a = Example()
            a.tryit(a)
        """)

        # bad operation (== on different types)

        assert_parse_fails(t, """\
            SyntaxError: Invalid operation: List[Integer] == List[String].
                from [test]:4:
        """,
        """\
            var v1 = [1]
            var v2 = ["1"]

            v1 == v2
        """)

        # bad operation (!String)

        assert_parse_fails(t, """\
            SyntaxError: Invalid operation: !String.
                from [test]:1:
        """,
        """\
            var v = !"a"
        """)

        # bad operation (RuntimeError for infinite comparison)

        assert_parse_string(t, """
            enum Tree {
                Leaf(Integer),
                Branch(List[Tree])
            }

            var b0 = [Leaf(0)]
            var t0 = Branch(b0)

            b0[0] = t0

            var b1 = [Leaf(1)]
            var t1 = Branch(b1)

            b1[0] = t1

            try: {
                b1 == b0
                0 / 0
            except RuntimeError:
                b0[0] = Leaf(1)
                b1[0] = Leaf(1)
            }
        """)

        # Can't think of a good use case for math between these two.

        assert_parse_fails(t, """\
            SyntaxError: Invalid operation: Double + Byte.
                from [test]:1:
        """,
        """\
            var v = 1.0 + 'a'
        """)
    }

    public define test_bad_subscript
    {
        var t = Interpreter()

        # bad subscript (Tuple subscript out of range)

        assert_parse_fails(t, """\
            SyntaxError: Index 3 is out of range for Tuple[Integer, String].
                from [test]:1:
        """,
        """\
            var s: String = <[1, "2"]> [3]
        """)

        # bad subscript (Tuple subscript not a literal)

        assert_parse_fails(t, """\
            SyntaxError: Tuple subscripts must be Integer literals.
                from [test]:3:
        """,
        """\
            var a = 1
            var v = <[1, 2]>
            v[a] = 0
        """)

        # bad subscript (negative Tuple subscripts not allowed)

        assert_parse_fails(t, """\
            SyntaxError: Index -1 is out of range for Tuple[Integer].
                from [test]:2:
        """,
        """\
            var v = <[1]>
            v[-1] = 0
        """)

        # bad subscript (positive Tuple subscript out of range)

        assert_parse_fails(t, """\
            SyntaxError: Index 5 is out of range for Tuple[Integer].
                from [test]:2:
        """,
        """\
            var v = <[1]>
            v[5] = 1
        """)

        # bad subscript (invalid List subscript type)

        assert_parse_fails(t, """\
            SyntaxError: List index is not an Integer or a Byte.
                from [test]:2:
        """,
        """\
            var v = [1]
            v[v]
        """)

        # bad subscript (invalid ByteString subscript type)

        assert_parse_fails(t, """\
            SyntaxError: ByteString index is not an Integer or a Byte.
                from [test]:2:
        """,
        """\
            var v = B"1"
            v[v]
        """)

        # bad subscript (invalid Hash subscript type)

        assert_parse_fails(t, """\
            SyntaxError: Hash index should be type 'Integer', not type 'String'.
                from [test]:1:
        """,
        """\
            [1 => 1, 2 => 2]["1"]
        """)

        # bad subscript (not supported on this type)

        assert_parse_fails(t, """\
            SyntaxError: Cannot subscript type 'Option[Integer]'.
                from [test]:1:
        """,
        """\
            Some(1)[1]
        """)

        # bad subscript (Bytestring subscript out of range)

        assert_parse_fails(t, """\
            IndexError: Subscript index -50 is out of range.
            Traceback:
                from [test]:1: in __main__
        """,
        """\
            B"Ā ā Ă ă Ą"[-50]
        """)

        # bad subscript (KeyError with large Integer value)

        assert_parse_fails(t, """\
            KeyError: 9000000000000000000
            Traceback:
                from [test]:2: in __main__
        """,
        """\
            var v = [1 => 1]
            var w = v[9000000000000000000]
        """)

        # bad subscript (KeyError with reasonable Integer value)

        assert_parse_fails(t, """\
            KeyError: 65535
            Traceback:
                from [test]:2: in __main__
        """,
        """\
            var v = [1 => 1]
            var w = v[65535]
        """)
    }

    public define test_broken_exit_fold
    {
        var t = Interpreter()

        # broken exit fold (with if)

        assert_parse_fails(t, """\
            SyntaxError: Missing return statement at end of function.
                from [test]:10:
        """,
        """\
            define f(a: Integer) : Integer
            {
                if a == 1: {
                    return 1
                elif a == 1:
                    a = 2
                else:
                    return 3
                }
            }
        """)

        # broken exit fold (with enum match case)

        assert_parse_fails(t, """\
            SyntaxError: Missing return statement at end of function.
                from [test]:9:
        """,
        """\
            define f(a: Option[Integer]) : Integer
            {
                match a: {
                    case Some(s):
                        s = 1
                    case None:
                        return 2
                }
            }
        """)

        # broken exit fold (with enum match final else)

        assert_parse_fails(t, """\
            SyntaxError: Missing return statement at end of function.
                from [test]:9:
        """,
        """\
            define f(a: Option[Integer]) : Integer
            {
                match a: {
                    case Some(s):
                        s = 1
                    else:
                        return 2
                }
            }
        """)

        # broken exit fold (with class match case)

        assert_parse_fails(t, """\
            SyntaxError: Missing return statement at end of function.
                from [test]:14:
        """,
        """\
            class One {}
            class Two < One {}
            class Three < Two {}

            define f(input: One): Integer {
                match input: {
                    case Three(t):
                        print(1)
                    case Two(t):
                        return 1
                    else:
                        return 2
                }
            }
        """)

        # broken exit fold (with class match final else)

        assert_parse_fails(t, """\
            SyntaxError: Missing return statement at end of function.
                from [test]:14:
        """,
        """\
            class One {}
            class Two < One {}
            class Three < Two {}

            define f(input: One): Integer {
                match input: {
                    case Three(t):
                        return 0
                    case Two(t):
                        return 1
                    else:
                        print(1)
                }
            }
        """)

