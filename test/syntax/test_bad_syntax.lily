import (Interpreter,
        TestCase) "../t/testing"

class TestBadSyntax < TestCase
{
    public define test_bad_assign_type
    {
        var t = Interpreter()

        # bad assign type (to global var)

        assert_parse_fails(t, """\
            SyntaxError: Cannot assign type 'String' to type 'Integer'.
                from [test]:2:
        """,
        """\
            var a = 10
            a = "10"
        """)

        # bad assign type (to class property)

        assert_parse_fails(t, """\
            SyntaxError: Cannot assign type 'String' to type 'Integer'.
                from [test]:6:
        """,
        """\
            class Example {
                public var @a = 10
            }

            var v = Example()
            v.a = "5"
        """)

        # bad assign type (to upvalue)

        assert_parse_fails(t, """\
            SyntaxError: Cannot assign type 'String' to type 'Integer'.
                from [test]:3:
        """,
        """\
            define f(a: Integer) {
                define g {
                    a = ""
                }
            }
        """)

        # bad assign type (to subscript)

        assert_parse_fails(t, """\
            SyntaxError: Right side of assignment is incomplete type 'Option[?]'.
                from [test]:3:
        """,
        """\
            var v = [1, 2, 3]

            v[0] = None
        """)

        # bad assign type (to string subscript)

        assert_parse_fails(t, """\
            SyntaxError: Subscript assignment on a String is not allowed.
                from [test]:3:
        """,
        """\
            var v = "asdf"

            v[0] = 1
        """)
    }

    public define test_bad_blocks
    {
        var t = Interpreter()

        # bad blocks (bad match expression case)

        assert_parse_fails(t, """\
            SyntaxError: Match statement value must be a user class or enum.
            Received: Tuple[Integer, String, Double]

               |
             1 | match <[1, "2", 3.3]>: {
               |                      ^

                from [test]:1:
        """,
        """\
            match <[1, "2", 3.3]>: {
            }
        """)

        # bad blocks (bad if expression case)

        assert_parse_fails(t, """\
            SyntaxError: Tuple[Integer, String] is not a valid condition type.
                from [test]:1:
        """,
        """\
            if <[1, "2"]>: {
            }
        """)

        # bad blocks (bad or/and expression left only)

        assert_parse_fails(t, """\
            SyntaxError: Unit is not a valid condition type.
                from [test]:1:
        """,
        """\
            if unit || 1: {
            }
        """)

        # bad blocks (bad or/and expression right only)

        assert_parse_fails(t, """\
            SyntaxError: Unit is not a valid condition type.
                from [test]:1:
        """,
        """\
            if 1 || unit: {
            }
        """)

        # bad blocks (bad or/and expression middle)

        assert_parse_fails(t, """\
            SyntaxError: Unit is not a valid condition type.
                from [test]:1:
        """,
        """\
            if 1 || unit && 1: {
            }
        """)

        # bad blocks (bad or/and expression middle all or)

        assert_parse_fails(t, """\
            SyntaxError: Unit is not a valid condition type.
                from [test]:1:
        """,
        """\
            if 1 || unit || 1: {
            }
        """)

        # bad blocks (for loop var must be Integer)

        assert_parse_fails(t, """\
            SyntaxError: For loop index must be Integer, but i has type String.

               |
             2 | for i in 0...10: {}
               |           ^

                from [test]:2:
        """,
        """\
            var i = ""
            for i in 0...10: {}
        """)

        # bad blocks (for must start with Integer)

        assert_parse_fails(t, """\
            SyntaxError: Expected type 'Integer', but got type 'String'.

               |
             1 | for i in "a"...0: {
               |             ^

                from [test]:1:
        """,
        """\
            for i in "a"...0: {
            }
        """)

        # bad blocks (condition using assign)

        assert_parse_fails(t, """\
            SyntaxError: Expected a value, but got an assignment instead.

               |
             2 | if v = 5:
               |         ^

                from [test]:2:
        """,
        """\
            var v = 10
            if v = 5:
                v = 1

            raise Exception("Failed.")
        """)

        # bad blocks (while after do)

        assert_parse_fails(t, """\
            SyntaxError: Expected 'while', not 'asdf'.

               |
             2 | } asdf
               |   ^

                from [test]:2:
        """,
        """\
            do: {
            } asdf
        """)

        # bad blocks (do while not allowed to use scope vars in condition)

        assert_parse_fails(t, """\
            SyntaxError: v has not been declared.

               |
             4 | } while v == 10
               |         ^

                from [test]:4:
        """,
        """\
            do: {
                var v = 10
                continue
            } while v == 10
        """)

        # bad blocks (unterminated if)

        assert_parse_fails(t, """\
            SyntaxError: Unexpected token 'end of file'.
                from [test]:2:
        """,
        """\
            if 1: {
        """)

        # bad blocks (else after else)

        assert_parse_fails(t, """\
            SyntaxError: else in exhaustive if.

               |
             5 | else:
               | ^

                from [test]:5:
        """,
        """\
            if 1: {
                1
            else:
                1
            else:
                1
            }
        """)

        # bad blocks (elif after else)

        assert_parse_fails(t, """\
            SyntaxError: elif in exhaustive if.

               |
             5 | elif 1:
               | ^

                from [test]:5:
        """,
        """\
            if 1: {
                1
            else:
                1
            elif 1:
                1
            }
        """)

        # bad blocks (with on invalid type)

        assert_parse_fails(t, """\
            SyntaxError: With statement value must be a user class or enum.
            Received: Integer

               |
             1 | with 1: {
               |       ^

                from [test]:1:
        """,
        """\
            with 1: {
                case Integer:
                else:
            }
        """)
    }

