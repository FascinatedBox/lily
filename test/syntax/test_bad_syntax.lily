    public define test_bad_comment
    {
        var t = Interpreter()

        # bad comment (unterminated multi-line)

        assert_parse_fails(t, """\
            SyntaxError: Unterminated multi-line comment (started at line 2).
                from [test]:6:
        """,
        """\

        #[



        """)

        # bad comment (docblock with double pound)

        assert_parse_fails(t, """\
            SyntaxError: Docblock line does not start with full '###'.

               |
             2 | ##
               | ^

                from [test]:2:
        """,
        """\
        ###
        ##
            define f {}
        """)

        # bad comment (docblock inconsistent indent)

        assert_parse_fails(t, """\
            SyntaxError: Docblock has inconsistent indentation.

               |
             2 | ### 1234
               | ^

                from [test]:2:
        """,
        """\
        ### asdf
            ### 1234
            define f {}
        """)

        # bad comment (docblock not followed by function or class)

        assert_parse_fails(t, """\
            SyntaxError: A docblock is not allowed here.
                from [test]:7:
        """,
        """
        var v = 10

        ### Example documentation block
        ###
        ### More details follow
        """)

        # bad comment (docblock preceded by non-whitespace).

        assert_parse_fails(t, """\
            SyntaxError: Docblock is preceded by non-whitespace.

               |
             2 | 0 ### blah
               | ^

                from [test]:2:
        """,
        """
        0 ### blah
        ### blah
        ### blah
        """)

        # bad comment (docblock on nested definition)

        assert_parse_fails(t, """\
            SyntaxError: Docblocks are only allowed on toplevel symbols.

               |
             3 | define g {
               | ^

                from [test]:3:
        """,
        """\
            define f {
                ### doc
                define g {

                }
            }
        """)

        # bad comment (docblock on var in anon block)

        assert_parse_fails(t, """\
            SyntaxError: Docblocks are only allowed on toplevel symbols.

               |
             3 | var v = 10
               | ^

                from [test]:3:
        """,
        """\
            {
                ### doc
                var v = 10
            }
        """)
    }

