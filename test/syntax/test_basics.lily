    public define test_while
    {
        var t = Interpreter()

        # while (base case with failsafe)

        assert_parse_string(t, """
            var counter = 0
            var i = 0

            while i != 10: {
                if counter == 15: { 0 / 0 }
                counter += 1
                i += 1
            }

            if i != 10: { 0 / 0 }
            if counter != 10: { 0 / 0 }
        """)


        # while (with continue)

        assert_parse_string(t, """
            i = 0
            counter = 0

            while i != 10: {
                i += 1

                if i % 2: { continue }

                counter += 1
            }

            if i != 10: { 0 / 0 }
            if counter != 5: { 0 / 0 }
        """)

        # while (with break)

        assert_parse_string(t, """
            i = 0
            counter = 0

            while i != 10: {
                i += 1

                if i == 5: { break }

                counter += 1
            }

            if i != 5: { 0 / 0 }
            if counter != 4: { 0 / 0 }
        """)

        # while (skip whole loop)

        assert_parse_string(t, """
            i = 10

            while i != 10: { 0 / 0 }
        """)

        # while (literal truthy condition)

        assert_parse_string(t, """
            i = 0

            while 1: {
                i += 1

                if i == 10: {
                    break
                }
            }

            if i != 10: { 0 / 0 }
        """)

        # while (literal falsey condition)

        assert_parse_string(t, """
            while 0: { 0 / 0 }
        """)
    }
