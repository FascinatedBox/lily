    public define test_compound_ops
    {
        var t = Interpreter()

        assert_parse_string(t, """
            define left_shift {
                var v = 1
                v <<= 1
                if v == 2: { else: 0 / 0 }
            }

            define right_shift {
                var v = 1
                v >>= 1
                if v == 0: { else: 0 / 0 }
            }

            define bitwise_and {
                var v = 0xf
                v &= 0x0
                if v == 0: { else: 0 / 0 }
            }

            define bitwise_or {
                var v = 0x1
                v |= 0x2
                if v == 0x3: { else: 0 / 0 }
            }

            define bitwise_xor {
                var v = 0x1
                v ^= 0x1
                if v == 0x0: { else: 0 / 0 }
            }

            define plus {
                var v = 1
                v += 1
                if v == 2: { else: 0 / 0 }
            }

            define minus {
                var v = 1
                v -= 1
                if v == 0: { else: 0 / 0 }
            }

            define multiply {
                var v = 10
                v *= 20
                if v == 200: { else: 0 / 0 }
            }

            define divide {
                var v = 1000
                v /= 10
                if v == 100: { else: 0 / 0 }
            }

            define modulo {
                var v = 10
                v %= 7
                if v == 3: { else: 0 / 0 }
            }

            left_shift()
            right_shift()
            bitwise_and()
            bitwise_or()
            bitwise_xor()
            plus()
            minus()
            multiply()
            divide()
            modulo()
        """)
    }

    public define test_digit_collection
    {
