import (Interpreter,
        LibraryTarget,
        StringTarget,
        TestCase) "../t/testing"

class TestBadManifest < TestCase
{
    private var @t_covlib =
        LibraryTarget(
            :path "covlib",
            :redirect "test/t/backbone"
        )

    private var @t_left =
        StringTarget(
            :path "left",
            :data """\
                var a: Integer
            """
        )

    public define test_basics
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Expected a keyword after docblock, but got end of file.
                from [test]:4:
        """,
        """\
            import manifest

            ### example docblock
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Unexpected token '!'.
                from [test]:3:
        """,
        """\
            import manifest

            !
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Invalid keyword potato for manifest.
                from [test]:3:
        """,
        """\
            import manifest

            potato
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Unexpected token 'end of file'.
                from [test]:4:
        """,
        """\
            import manifest

            class Example {
        """)

        assert_manifest_fails(t, """\
            SyntaxError: 'predefined' only available to the prelude module.
                from [test]:3:
        """,
        """\
            import manifest

            predefined Boolean
            {
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: '}' outside of a block.
                from [test]:3:
        """,
        """\
            import manifest

            }
        """)
    }

    public define test_class
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Only native classes can have class properties.
                from [test]:4:
        """,
        """\
            import manifest

            foreign class Example {
                public var @a: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Only native classes can have class properties.
                from [test]:5:
        """,
        """\
            import manifest

            foreign class Example(public var @a: Integer)
            {
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Class methods defined in manifest mode must be public.
                from [test]:5:
        """,
        """\
            import manifest

            class Example
            {
                private define a
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Class methods defined in manifest mode must be public.
                from [test]:4:
        """,
        """\
            import manifest

            class Example {
                protected define a
            }
        """)
    }

    public define test_intro
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Files in manifest mode must start with 'import manifest'.
                from [test]:1:
        """,
        """\
            import   manifest
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Files in manifest mode must start with 'import manifest'.
                from [test]:1:
        """,
        """ \
            import manifest
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Files in manifest mode must start with 'import manifest'.
                from [test]:1:
        """,
        """\n\
            import manifest
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Files in manifest mode must start with 'import manifest'.
                from [test]:1:
        """,
        """\
            ???
        """)
    }

    public define test_import
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Import keyword should not have a docblock.
                from [test]:4:
        """,
        """\
            import manifest

            ### docblock
            import asdf
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Cannot import 'sys' while in manifest mode.
                from [test]:3:
        """,
        """\
            import manifest

            import sys
        """)

        t = Interpreter.with_targets(
            @t_covlib,
            @t_left
        )

        assert_manifest_fails(t, """\
            SyntaxError: Cannot import 'covlib' while in manifest mode.
                from [test]:3:
        """,
        """\
            import manifest

            import covlib
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Files in manifest mode must start with 'import manifest'.
                from left.lily:1:
        """,
        """\
            import manifest

            import left
        """)
    }

    public define test_library
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword must be at toplevel.
                from [test]:4:
        """,
        """\
            import manifest

            class Example {
                library potato
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword must come before other keywords.
                from [test]:7:
        """,
        """\
            import manifest

            class Example
            {
            }

            library example
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword must come before other keywords.
                from [test]:7:
        """,
        """\
            import manifest

            foreign class Example
            {
            }

            library example
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword must come before other keywords.
                from [test]:9:
        """,
        """\
            import manifest

            enum Example
            {
                One,
                Two
            }

            library example
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword must come before other keywords.
                from [test]:5:
        """,
        """\
            import manifest

            var a: Integer

            library example
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Library keyword has already been used.
                from [test]:7:
        """,
        """\
            import manifest

            ### example
            library example

            ### potato
            library potato
        """)
    }

    public define test_constant
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Cannot declare a constant inside a class or enum.
                from [test]:5:
        """,
        """\
            import manifest

            class Example
            {
                constant x: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Cannot declare a constant inside a class or enum.
                from [test]:8:
        """,
        """\
            import manifest

            enum Example
            {
                One,
                Two

                constant x: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Expected 'a label', not 'a property name'.
                from [test]:3:
        """,
        """\
            import manifest

            constant @x: Integer
        """)

        assert_manifest_fails(t, """\
            SyntaxError: x has already been declared.
                from [test]:4:
        """,
        """\
            import manifest

            var x: Integer
            constant x: Integer
        """)


        assert_manifest_fails(t, """\
            SyntaxError: Constant x given a non-primitive type (List[String]).
                from [test]:4:
        """,
        """\
            import manifest

            constant x: List[String]
        """)
    }

    public define test_var
    {
        var t = Interpreter()

        assert_manifest_fails(t, """\
            SyntaxError: Class var declaration must start with a scope.
                from [test]:5:
        """,
        """\
            import manifest

            class Example
            {
                var @x: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Class properties must start with @.
                from [test]:5:
        """,
        """\
            import manifest

            class Example
            {
                public var x: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: An enum must have at least two variants.
                from [test]:5:
        """,
        """\
            import manifest

            enum Example
            {
                var a: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Var declaration not allowed inside of an enum.
                from [test]:7:
        """,
        """\
            import manifest

            enum Example
            {
                One,
                Two
                var a: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Var declaration not allowed inside of an enum.
                from [test]:8:
        """,
        """\
            import manifest

            enum Example
            {
                One,
                Two
                define f: Integer
                var a: Integer
            }
        """)

        assert_manifest_fails(t, """\
            SyntaxError: Cannot use a class property outside of a constructor.
                from [test]:3:
        """,
        """\
            import manifest

            var @x: Integer
        """)
    }
}
